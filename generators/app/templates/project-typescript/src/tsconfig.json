{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",


        "declaration": true,
        "outDir": "../build/package/<%= projectType == "Library" ? "lib" : "app" %>",

        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "types": ["node"],
    },
    "exclude": [
        "node_modules",
        "test/**/*.test.ts"
    ]
}
